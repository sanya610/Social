<link rel="stylesheet" href="<%= assetPath('css/comment.css') %>">

<li id="comment">
    <p>
    
      <%= comment.content %>
      
      <small id="like-comment">
        <% if (locals.user){ %>
          <a class="toggle-like-button" href="/likes/toggle/?id=<%= comment._id%>&type=Comment" data-likes="<%= comment.likes.length %>">
            <%= comment.likes.length %>&nbsp&nbsp<i class="far fa-heart"></i>
          </a>
         
        <% }else{ %>
           <%= comment.likes.length %>&nbsp&nbsp<i class="far fa-heart"></i>
        <% } %>
      </small>


      <% if(locals.user && locals.user.id == comment.user.id){ %>
      <small>
             <a href="/comments/destroy/<%= comment.id %>"  class="delete-comment-button">
              <i class="fas fa-trash-alt"></i>
            </a>
      </small> 
      <% } %>

      <br>
      <small>
            <%= comment.user.name %>
      </small> 

    </p>

</li>